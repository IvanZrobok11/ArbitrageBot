{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "AllowedHosts": "*",
  "HttpClient.Policy": {
    "HandlerLifetime": 7, //minute
    "RetryCount": 1,
    "RetryTimeout": 100, //milliseconds
    "Timeout": 5000 //milliseconds
  },
  "allowedExchanges": [ "Binance", "ByBit", "KuCoin", "Mexc" ],
  "BackgroundServices": {
    "AssetsBackgroundService": "00:00:30" // 1 minute // 30 sec
  },
  "BotConfiguration": {
    "BotToken": "your-bot-token",
    "BotWebhookUrl": "",
    "SecretToken": "SUPERSECRETPATH", // webhook token
    "BotAuthPhrase": "auth-password"
  },
  "CryptoAPI": {
    "ExchangesCredentials": {
      "Binance": {
        "Key": "your-binance-api-key",
        "Secret": "your-binance-api-secret"
      },
      "Bybit": {
        "Key": "your-bybit-api-key",
        "Secret": "your-bybit-api-secret"
      },
      "GateIo": {
        "Key": "your-bybit-api-key",
        "Secret": "your-bybit-api-secret"
      },
      "KuKoin": {
        "Key": "your-bybit-api-key",
        "Secret": "your-bybit-api-secret"
      },
      "Mexc": {
        "Key": "your-bybit-api-key",
        "Secret": "your-bybit-api-secret"
      }
    }
  }
}
